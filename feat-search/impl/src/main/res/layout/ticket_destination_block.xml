<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_2">

    <ImageView
        android:id="@+id/destination_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_arrow_left_dark_blue_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/destination_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Москва-Сочи"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/destination_title_text"
        app:layout_constraintStart_toEndOf="@id/destination_back_button"
        app:layout_constraintTop_toTopOf="@id/destination_back_button"
        app:layout_constraintBottom_toTopOf="@id/destination_header"/>


    <TextView
        android:id="@+id/destination_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="23 февраля, 1 пассажир"
        android:textSize="14sp"
        android:textColor="@color/grey_6"
        android:fontFamily="@font/roboto_italic"
        app:layout_constraintStart_toStartOf="@id/destination_title"
        app:layout_constraintBottom_toBottomOf="@id/destination_back_button"
        app:layout_constraintTop_toBottomOf="@id/destination_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>