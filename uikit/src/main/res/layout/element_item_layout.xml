<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/element_item_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/element_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/element_header"
        tools:src="@drawable/img_complex_route"/>

    <TextView
        android:id="@+id/element_header"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/element_icon"
        app:layout_constraintStart_toStartOf="@id/element_icon"
        app:layout_constraintEnd_toEndOf="@id/element_icon"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:textAlignment="center"
        android:maxLines="2"
        tools:text="@string/complex_route"
        />

</androidx.constraintlayout.widget.ConstraintLayout>