<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_edittext_fields"
    android:background="@drawable/common_background_grey4_shape"
    android:elevation="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/from_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColorHint="@color/grey_6"
        android:textColor="@color/white"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="@id/loupe_icon"
        app:layout_constraintBottom_toTopOf="@id/delimiter"
        app:layout_constraintStart_toEndOf="@id/loupe_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/loupe_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_loupe_24"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/delimiter"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@drawable/horizontal_line_shape"
        app:layout_constraintStart_toStartOf="@id/from_edittext"
        app:layout_constraintEnd_toEndOf="@id/from_edittext"
        app:layout_constraintTop_toBottomOf="@id/from_edittext"
        app:layout_constraintBottom_toTopOf="@id/to_edittext"
        />

    <EditText
        android:id="@+id/to_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        android:textColorHint="@color/grey_6"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/delimiter"
        app:layout_constraintStart_toStartOf="@id/from_edittext"
        app:layout_constraintEnd_toEndOf="@id/from_edittext"
        app:layout_constraintBottom_toBottomOf="@id/loupe_icon"
        />
</androidx.constraintlayout.widget.ConstraintLayout>