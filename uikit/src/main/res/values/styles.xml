<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="screen_title_text_style">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/grey_7</item>
    </style>

    <style name="search_edit_text_field_style">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/grey_6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="chip_style" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">true</item>
        <item name="iconStartPadding">2dp</item>

        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/grey_3</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="chipCornerRadius">50dp</item>
        <item name="textEndPadding">2dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeWidth">0dp</item>
<!--        <item name="chipStrokeColor">@android:color/transparent</item>-->
        <item name="android:textAppearance">@style/chip_text_style</item>
    </style>
    <style name="chip_text_style" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>
</resources>